{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "TaskCreated v1",
    "type": "object",
    "required": [
        "title",
        "skill_key",
        "base_xp"
    ],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "skill_key": {
            "type": [
                "string",
                "null"
            ]
        },
        "difficulty": {
            "type": "string",
            "enum": [
                "easy",
                "medium",
                "hard",
                "epic"
            ],
            "default": "medium"
        },
        "base_xp": {
            "type": "integer",
            "minimum": 0
        },
        "assignee_id": {
            "type": [
                "string",
                "null"
            ],
            "format": "uuid"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "creator_id": {
            "type": [
                "string",
                "null"
            ],
            "format": "uuid"
        }
    },
    "additionalProperties": false
}
